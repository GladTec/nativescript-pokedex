
<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
      xmlns:gv="nativescript-grid-view" loaded="onLoaded">
  <Page.actionBar>
    <ActionBar title="Pokedex" />
  </Page.actionBar>

  <GridLayout>
    <gv:GridView items="{{ pokedex }}" verticalSpacing="5" horizantalSpacing="5"
      colWidth="150" rowHeight="200" itemTap="onItemTap">
      <gv:GridView.itemTemplate>
        <GridLayout rows="*,auto" columns="*">
          <Image src="{{ fileName, '~/images/' + fileName }}" row="0" col="0" />
          <StackLayout row="1" col="0">
            <Label text="{{ id, id | pad(3) }}" class="id" />
            <Label text="{{ name }}" class="name" row="1" col="0" />
          </StackLayout>
        </GridLayout>
      </gv:GridView.itemTemplate>
    </gv:GridView>
  </GridLayout>
</Page>